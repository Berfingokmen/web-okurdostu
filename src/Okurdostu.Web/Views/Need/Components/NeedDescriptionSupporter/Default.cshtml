@model Okurdostu.Data.Model.Need

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;
@{ bool IsAuthenticatedUserEqualModelUser = false; }
@{
    if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
    {
        string AuthenticatedUserId = HttpContextAccessor.HttpContext.User.Claims.FirstOrDefault(c => c.Type == "Id")?.Value;
        if (AuthenticatedUserId == Model.UserId.ToString())
        {
            IsAuthenticatedUserEqualModelUser = true;
        }
    }
}

@if (Model.IsConfirmed)
{
    <ul class="nav nav-pills mb-3 d-flex justify-content-center" id="pills-tab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-selected="true">Hakkında</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="pills-comment-tab" data-toggle="pill" href="#pills-comments" role="tab" aria-controls="pills-comments" aria-selected="false">Tartışmalar</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" data-toggle="pill" href="#pills-supporters" role="tab" aria-controls="pills-supporters" aria-selected="false">Destekleyenler</a>
        </li>
    </ul>
}
<div class="tab-content text-black-50" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
        @if (IsAuthenticatedUserEqualModelUser && !Model.IsCompleted)
        {
            <center>
                <button class="btn btn-outline-purple rounded-custom w-75  mb-3 pt-1 pl-1 font-weight-bold" href="" data-toggle="modal" data-target="#editdescription" style="cursor:pointer;">
                    <i class="far fa-edit"></i> Açıklamayı düzenle
                </button>
            </center>

            <div class="modal fade" id="editdescription" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered" role="document" style="height: 100%;">
                    <div class="modal-content" style="background: transparent; height: auto;">
                        <div class="modal-body bg-light" style="border-radius: 25px;">
                            <h3 class="font-weight-bold text-center text-black-50">
                                Açıklama düzenleme
                            </h3>
                            <hr />
                            @await Component.InvokeAsync("EditNeedDescription", new { Id = Model.Id })
                        </div>
                    </div>
                </div>
            </div>
        }
        <p class="text-break text-justify">
            @Html.Raw(Model.Description.Replace("\r\n", "<br/>"))
        </p>
    </div>
    <div class="tab-pane fade text-break" id="pills-supporters" role="tabpanel" aria-labelledby="pills-supporters-tab">
        <div class="text-center">
            <h5 class="">Bu ihtiyaç kampanyasını kimse desteklememiş.</h5>
            <a data-toggle="modal" data-target="#paymentmethods" style="cursor:pointer;">
                <h5 class="od">İlk destekleyen sen ol!</h5>
            </a>
        </div>
