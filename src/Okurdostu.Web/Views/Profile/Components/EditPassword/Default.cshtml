@model Okurdostu.Web.Models.ProfileModel

@using (Html.BeginForm("EditPassword", "Account", FormMethod.Post))
{
    <div class="form-horizontal">
        @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label pl-2 pr-0 font-weight-bold text-black-50" })
        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control font-weight bold", @autocomplete = "off" } })
        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger font-weight-bold" })
    </div>
    <div class="form-group">
        <span class="control-label pl-2 pr-0 font-weight-bold text-black-50">Yeni parola</span>
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control font-weight bold", @autocomplete = "new-password" } })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger font-weight-bold" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.RePassword, htmlAttributes: new { @class = "control-label pl-2 pr-0 font-weight-bold text-black-50" })
        @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control font-weight bold" } })
        @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger font-weight-bold" })
    </div>
    <div class="modal-footer">
        <button class="btn btn-outline-secondary rounded-custom font-weight-bold btn-block" data-dismiss="modal">Vazgeçtim</button>
        <input type="submit" value="Değiştir" class="btn btn-outline-purple rounded-custom w-100 font-weight-bold" />
    </div>
}
