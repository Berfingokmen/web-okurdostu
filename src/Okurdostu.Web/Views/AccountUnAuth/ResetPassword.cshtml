@model ProfileModel
@{
    ViewData["Title"] = "Parola değiştirme"; ViewData["AppMenu"] = "Hide"; Layout = "~/Views/Shared/_LayoutOkurdostu.cshtml";
}
@if (TempData["ResetPasswordMessage"] != null)
{<h5 class="font-weight-bold text-danger">@Html.Raw(TempData["ResetPasswordMessage"].ToString())</h5>
}
else
{<h3 class="text-black-50 text-center text-md-left">Parolanızı değiştirin</h3>}
<partial name="~/Views/AccountUnAuth/_PartialProfile.cshtml" model="@TempData["PasswordResetUser"]" />
<partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
@using (Html.BeginForm("ChangePassword", "AccountUnAuth", FormMethod.Post, new { id = "newpassword" }))
{
    <div class="form-horizontal">
        <span class="ml-1 font-weight-bold text-black-50">Yeni parola</span><br />
        <div class="form-group w-75">
            <div class="input-group">
                <div class="input-group-prepend rounded-custom">
                    <span class="input-group-text pl-0 pr-1" style="background-color:transparent; border-color:transparent;" id="basic-addon1">
                        <a href="" class="font-weight-bold text-black-50" id="show_hide_password"><i id="eye" class="fa fa-eye-slash" aria-hidden="true"></i></a>
                    </span>
                </div>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control font-weight-bold text-black-50", @placeholder = "Yeni parola" } })
            </div>
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger font-weight-bold" })
        </div>
        <div class="form-group w-75"> <input type="submit" value="Parolamı değiştir" class="btn btn-block btn-outline-purple rounded-custom font-weight-bold" /> </div>
    </div>
}
<script src="~/js/showhidepass.js"></script>
<script>
    $('#newpassword').on('submit', function () {
        setTimeout(function () {
            if (!($('#Password-error').length)) {
                $('#spinner-form').show();
            }
        }, 5)
    });
</script>